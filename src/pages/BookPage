var BasePage = require("./BasePage");

// ELEMENTS IN SEARCHPAGE

let authorNameCss = 'a.nome_autor';
let isbnXpath = '//section[2]/div/div[3]/div/div/ul/li[1]';
let numberOfPagesXpath = '//section[2]/div/div[3]/div/div/ul/li[6]';
let bookDimensionsXpath = '//section[2]/div/div[3]/div/div/ul/li[5]';


// CLOSING ELEMENTS

class BookPage extends BasePage {
  async getAuthorName(){
    await this.findTextByCss(authorNameCss);
  }
  async getISBN(){
    await this.findTextByXpath(isbnXpath);
  }
  async getNumberOfPages(){
    await this.findTextByXpath(numberOfPagesXpath);
  }
  async getBookDimensions(){
    await this.findTextByXpath(bookDimensionsXpath);
  }
}

module.exports = new BookPage();
